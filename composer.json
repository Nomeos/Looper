{
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Db\\": "database/",
      "Test\\": "tests/",
      "Route\\": "routes/"
    }
  },
  "require": {
    "nikic/fast-route": "^1.3",
    "phpunit/phpunit": "^9.5",
    "byjg/migration": "^4.2",
    "thynkon/simple-orm": "dev-master",
    "ext-pdo": "*"
  },
  "scripts": {
    "build-css": [
      "./scripts/compileScss.sh"
    ],
    "build-css-win": [
      "python ./scripts/compileScss.py"
    ],
    "populate-db": [
      "php ./scripts/populateDB.php"
    ],
    "test": [
        "vendor/bin/phpunit --configuration=./phpunit.xml"
    ]
  }
}
